<h1>New drink_ingredient</h1>

<% form_for(@drink_ingredient) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :drink_id %><br />
    <%= f.text_field :drink_id %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :name %><br />
